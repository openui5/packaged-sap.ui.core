<mvc:View xmlns="sap.ui.commons" xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="samples.components.ext.sap.Main">
	<l:VerticalLayout>
		<TextView text="SAP Component"></TextView>
		<mvc:XMLView viewName="samples.components.ext.sap.Sub1" />
		<mvc:XMLView id="sub2View" viewName="samples.components.ext.sap.Sub2" />
		<mvc:XMLView viewName="samples.components.ext.sap.Sub3" />
		<html:h2>JSView Extension Tests start below:</html:h2>
		<mvc:JSView viewName="samples.components.ext.sap.Sub4" />
		<html:h2>HTMLView Modification Tests start below:</html:h2>
		<mvc:HTMLView viewName="samples.components.ext.sap.Sub5" />
		<core:Fragment fragmentName="samples.components.ext.sap.Frag1" type="XML" />
		<Button text="Destroy Sub2 View (to check controller lifecycle method onExit)" press="destroySub2View" />
		<TextView text="{path:'/number', formatter:'.formatNumber'}" tooltip="formatted number in SAP MainView"></TextView>
	</l:VerticalLayout>

</mvc:View>
